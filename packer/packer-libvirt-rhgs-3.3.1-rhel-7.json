{
  "variables": {
    "iso_file_path": "{{env `ISO_FILE_PATH`}}",
    "output_directory": "{{env `OUTPUT_DIRECTORY`}}"
  },
  "builders": [
    {
      "name": "rhgs-node",
      "type": "qemu",
      "accelerator": "kvm",
      "boot_command": [
        "<up><tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/rhgs-rhel-7-ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 20480,
      "headless": true,
      "http_directory": "kickstart",
      "iso_url": "{{ user `iso_file_path` }}",
      "iso_checksum_type": "sha256",
      "iso_checksum": "431a58c8c0351803a608ffa56948c5a7861876f78ccbe784724dd8c987ff7000",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "900s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "disk_interface": "virtio",
      "net_device": "virtio-net",
      "format": "qcow2",
      "vm_name": "packer-rhgs-3.3.1-rhel-7",
      "qemuargs": [
        ["-m", "2048M"],
        ["-smp", "cpus=1,cores=2,maxcpus=2"]
      ],
      "vnc_bind_address": "0.0.0.0"
    },
    {
      "name": "tendrl-server",
      "type": "qemu",
      "accelerator": "kvm",
      "boot_command": [
        "<up><tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/rhgs-rhel-7-ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 20480,
      "headless": true,
      "http_directory": "kickstart",
      "iso_url": "{{ user `iso_file_path` }}",
      "iso_checksum_type": "sha256",
      "iso_checksum": "431a58c8c0351803a608ffa56948c5a7861876f78ccbe784724dd8c987ff7000",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "900s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "disk_interface": "virtio",
      "net_device": "virtio-net",
      "format": "qcow2",
      "vm_name": "packer-rhgs-3.3.1-rhel-7",
      "qemuargs": [
        ["-m", "2048M"],
        ["-smp", "cpus=1,cores=2,maxcpus=2"]
      ]
    }
  ],
  "provisioners": [
    {
    "type": "ansible",
    "only": ["rhgs-node"],
    "user": "vagrant",
    "playbook_file": "ansible/libvirt-rhgs-3.3.1-rhel-7.yml",
    "extra_arguments": [
        "--become"
      ]
    },
    {
    "type": "ansible",
    "only": ["tendrl-server"],
    "user": "vagrant",
    "playbook_file": "ansible/libvirt-tendrl-server-3.3.1-rhel-7.yml",
    "extra_arguments": [
        "--become"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 9,
      "output": "{{ user `output_directory` }}/libvirt-rhgs-3.3.1-rhel-7.box"
    }
  ]
}
