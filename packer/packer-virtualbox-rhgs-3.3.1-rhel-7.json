{
  "variables": {
    "iso_file_path": "{{env `ISO_FILE_PATH`}}",
    "output_directory": "{{env `OUTPUT_DIRECTORY`}}"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<up><tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/rhgs-rhel-7-ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 20480,
      "guest_os_type": "RedHat_64",
      "headless": true,
      "http_directory": "kickstart",
      "iso_url": "{{ user `iso_file_path` }}",
      "iso_checksum_type": "sha256",
      "iso_checksum": "431a58c8c0351803a608ffa56948c5a7861876f78ccbe784724dd8c987ff7000",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "900s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "post_shutdown_delay": "2m",
      "guest_additions_path": "vbox_guest_additions.iso",
      "virtualbox_version_file": ".vbox_version",
      "iso_interface": "sata",
      "hard_drive_interface": "sata",
      "format": "ova",
      "output_directory": "{{ user `output_directory` }}",
      "vm_name": "packer-rhgs-3.3.1-rhel-7",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--vram",
          "32"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--nic1",
          "nat",
          "--nictype1",
          "virtio"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--nic2",
          "hostonly",
          "--nictype2",
          "virtio",
          "--hostonlyadapter2",
          "vboxnet0"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--audio",
          "none"
        ],
        [
          "storagectl",
          "{{.Name}}",
          "--name",
          "IDE Controller",
          "--remove"
        ]
      ]
    }
  ],
  "provisioners": [
    {
    "type": "ansible",
    "user": "vagrant",
    "playbook_file": "ansible/virtualbox-rhgs-3.3.1-rhel-7.yml",
    "extra_arguments": [
        "--become"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 9,
      "output": "{{ user `output_directory` }}/virtualbox-rhgs-3.3.1-rhel-7.box"
    }
]
}
