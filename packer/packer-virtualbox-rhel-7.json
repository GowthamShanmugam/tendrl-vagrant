{
  "variables": {
    "iso_file_path": "{{env `ISO_FILE_PATH`}}",
    "output_directory": "{{env `OUTPUT_DIRECTORY`}}"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<up><tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/rhgs-rhel-7-ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 20480,
      "guest_os_type": "RedHat_64",
      "headless": true,
      "http_directory": "kickstart",
      "iso_url": "{{ user `iso_file_path` }}",
      "iso_checksum_type": "sha256",
      "iso_checksum": "431a58c8c0351803a608ffa56948c5a7861876f78ccbe784724dd8c987ff7000",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "900s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "guest_additions_path": "vbox_guest_additions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "iso_interface": "sata",
      "hard_drive_interface": "sata",
      "format": "ova",
      "output_directory": "{{ user `output_directory` }}",
      "vm_name": "packer-rhel-7",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ]
    }
  ],
  "provisioners": [
    {
    "type": "ansible",
    "user": "vagrant",
    "playbook_file": "ansible/rhgs-rhel-7.yml",
    "extra_arguments": [
        "--become"
      ]
    }
  ]
}
